<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BertScout2026.MainPage">

    <ScrollView>

        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="bert_logo.png"
                HeightRequest="148"
                Aspect="AspectFit"
                SemanticProperties.Description="Bert 133 Logo" />

            <HorizontalStackLayout 
                Padding="30,0"
                Spacing="0">

                <Label
                    Text="Team#:"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"
                    Margin="0,10,10,0"
                    FontSize="{OnPlatform WinUI=Small, Android=Medium}"
                    />

                <Entry
                    x:Name="EntryTeamNumber"
                    WidthRequest="80"
                    Keyboard="Numeric"
                    MaxLength="5"
                    IsEnabled="True"
                    Margin="0,0,0,0"
                    Text=""
                    FontSize="{OnPlatform WinUI=Small, Android=Medium}"
                    />

                <Label
                    Text="Match#:"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"
                    Margin="20,10,10,0"
                    FontSize="{OnPlatform WinUI=Small, Android=Medium}"
                    />

                <Entry
                    x:Name="EntryMatchNumber"
                    WidthRequest="55"
                    Keyboard="Numeric"
                    MaxLength="3"
                    IsEnabled="True"
                    Margin="4,5,0,0"
                    Text=""
                    FontSize="{OnPlatform WinUI=Small, Android=Medium}"
                    />

            </HorizontalStackLayout>

            <HorizontalStackLayout
                HorizontalOptions="Center">

                <Label
                    Text="Auto Cycles:"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="Auto Number of Cycles" 
                    Margin="0,9,0,0"
                    FontSize="{OnPlatform WinUI=Small, Android=Medium}"
                    />

                <Button
                    x:Name="AutoNumberOfCyclesPlus"
                    Text="0"
                    SemanticProperties.Hint="Auto Number of Cycles Plus"
                    Clicked="AutoNumberOfCyclesPlusClicked"
                    Margin="10,0,0,0"
                    HorizontalOptions="Center" />

            </HorizontalStackLayout>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
